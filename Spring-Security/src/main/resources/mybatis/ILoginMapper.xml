<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springsecurity.repositories.ILoginMapper">

    <select id="login" parameterType="loginRequest" resultType="org.example.springsecurity.configurations.security.UserDetailsImpl">
        SELECT
            USERNAME,
            USER_CODE
        FROM USERS WHERE USERNAME = #{username}
    </select>

</mapper>